<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_file_image"
        android:src="@drawable/folder"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="目录"
        android:id="@+id/list_file_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/list_file_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="时间"
        android:id="@+id/list_file_size"
        android:layout_below="@+id/list_file_name"
        android:layout_toEndOf="@+id/list_file_image" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/split"
        android:id="@+id/list_file_split"
        android:layout_below="@+id/list_file_name"
        android:layout_toEndOf="@+id/list_file_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="时间2"
        android:id="@+id/list_file_time"
        android:layout_alignTop="@+id/list_file_split"
        android:layout_toEndOf="@+id/list_file_split" />

    <ImageView
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dir"
        android:src="@drawable/dir"
        android:layout_alignBottom="@+id/list_file_time"
        android:layout_alignParentEnd="true" />

</RelativeLayout>