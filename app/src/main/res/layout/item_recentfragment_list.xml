<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_rencent"
        android:src="@drawable/file_icon_mp3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/file_name_recent"
        android:textSize="20sp"
        android:textColor="@color/recentfile_text_color"
        android:gravity="center|fill"
        android:text="fafa"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/image_rencent"
        android:layout_toEndOf="@+id/image_rencent" />

</RelativeLayout>